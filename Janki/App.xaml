<Application
    x:Class="Janki.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Janki">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <local:LocalStorageMediaManager x:Key="MediaManager" />

            <Style TargetType="local:HtmlWebView">
                <Setter Property="MediaProvider" Value="{Binding Source={StaticResource MediaManager}, Path=CardMediaProvider}" />
            </Style>

            <Style TargetType="local:WebEditBox">
                <Setter Property="MediaProvider" Value="{Binding Source={StaticResource MediaManager}, Path=FieldEditorMediaProvider}" />
            </Style>

            <local:CommandValueConverter x:Key="CommandValueConverter" />

            <local:DialogService x:Key="DialogService" />

            <local:GoneIfZeroValueConverter x:Key="GoneIfZero" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
